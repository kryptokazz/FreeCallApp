{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@user/*": ["./src/User/*"],
      "@topic/*": ["./src/Topic/*"],
      "@set/*": ["./src/Set/*"],
      "@field/*": ["./src/Field/*"],
      "@word/*": ["./src/Word/*"]
    },
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Change to "node" for better compatibility
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

